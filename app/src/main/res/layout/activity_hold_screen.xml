<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    android:orientation="vertical"
    tools:context=".deep_breathing.HoldScreen">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:src="@drawable/arrow_icon"
            app:tint="@color/white" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="10"
            android:progressDrawable="@drawable/progress_drawable" />

        <TextView
            android:id="@+id/time_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/urbanist_bold"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:layout_marginTop="80dp">

        <ImageView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_round_opacity21" />

        <ImageView
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_round_opacity21" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_round_opacity10" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_round_opacity46" />

        <ImageView
            android:id="@+id/img_inhale"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_round_opacity46"
            android:padding="20dp"
            android:src="@drawable/hold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_inhale"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/urbanist_semibold"
            android:text="@string/hold"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <!-- Pause / Play button stacked -->
        <FrameLayout
            android:id="@+id/frame_pause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/pause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_inhale_buttons"
                android:padding="10dp"
                android:src="@drawable/ic_pause_white" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_inhale_buttons"
                android:padding="10dp"
                android:src="@drawable/ic_play_white"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Vibration buttons stacked -->
        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignBottom="@id/frame_pause"
            android:layout_toStartOf="@id/frame_pause"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/vibration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_inhale_buttons"
                android:padding="20dp"
                android:src="@drawable/vibration" />

            <ImageView
                android:id="@+id/vibrationOff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_inhale_buttons"
                android:padding="20dp"
                android:src="@drawable/vibration"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Volume buttons stacked -->
        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignBottom="@id/frame_pause"
            android:layout_toEndOf="@id/frame_pause"
            android:layout_marginStart="30dp">

            <ImageView
                android:id="@+id/volumeOn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_inhale_buttons"
                android:padding="20dp"
                android:src="@drawable/volume" />

            <ImageView
                android:id="@+id/volumeOff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_inhale_buttons"
                android:padding="20dp"
                android:src="@drawable/volume_off"
                android:visibility="gone" />
        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>