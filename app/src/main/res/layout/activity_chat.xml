<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/arrow_icon" />

        <TextView
            android:id="@+id/usersName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/urbanist_semibold"
            android:paddingStart="12dp"
            android:text="Dr. Adam Carter, Ph.d."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/videoCallBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/video_call"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/voiceCallBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/voice_call"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/menuBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:padding="2dp"
            android:src="@drawable/dot_option" />
    </LinearLayout>

    <!-- Chat messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp" />

    <!-- Input area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/edt_bg"
            android:fontFamily="@font/urbanist_medium"
            android:hint="Type a message..."
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/sendMessageBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_circle_background"
            android:backgroundTint="@color/olive_green"
            android:src="@drawable/sent"
            app:tint="@color/white" />
    </LinearLayout>
</LinearLayout>